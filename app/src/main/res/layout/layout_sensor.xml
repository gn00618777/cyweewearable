<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
        <CheckBox
            android:id="@+id/checkbox_adxl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADXL"/>
        <TextView
            android:id="@+id/adxl_raw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/checkbox_bmi160"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI160"/>
        <TextView
            android:id="@+id/bmi_raw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/checkbox_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart"/>
        <TextView
            android:id="@+id/heart_raw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/checkbox_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMP280"/>
        <TextView
            android:id="@+id/pressure_raw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>
