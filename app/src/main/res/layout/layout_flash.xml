<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/sync_erase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刪除所有歷史紀錄"/>

        <Button
            android:id="@+id/sync_auto_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="開始同步歷史紀錄"/>

    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/oled_erase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刪除OLED頁面"/>

        <Button
            android:id="@+id/bitmap_erase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刪除BitMap頁面"/>

        <Button
            android:id="@+id/font_erase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刪除Font頁面"/>

    </LinearLayout>


</LinearLayout>
